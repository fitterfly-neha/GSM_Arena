<h1>Edit Device.</h1>

<% if @device.errors.any? %>
    <h3>Device info is not being saved, please have a look at following instructions.</h3>
    <ul>
        <%@device.errors.full_messages do |msg|%>
            <li><%= msg%></li>
        <%end%>
    </ul>
<%end%>

<%= form_with(model: @brand, local: true) do |fm|%>
      <p> 
    <%= f.label :brand_name %><br/> 
    <%= f.text_field :brand_name %>
  </p>

  <p>
    <%= f.label :device_name %><br/> 
    <%= f.text_field :device_name %>
  </p>

  <p>
    <%= f.label :screen_size %><br/> 
    <%= f.text_field :screen_size %>
  </p>

  <p>
    <%= f.label :camera %><br/> 
    <%= f.text_field :camera %>
  </p>

  <p>
    <%= f.label :battery %><br/> 
    <%= f.text_field :battery %>
  </p>

   <p>
    <%= f.label :brand_id %><br/> 
    <%= f.text_field :brand_id %>
  </p>
  <p>
    <%= f.submit %> 
  </p>

<%end%>

<%= link_to 'Cancel & Return to Brands Listing Page.', devices_path%>