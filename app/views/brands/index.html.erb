<h1>Brands listing page</h1>
<br>
<table  style = "border: 1px solid black">
  <thead>
    <tr>
      <th>Brand Name</th>
      <th>Origin Country</th>
      <th>Actions</th>
    </tr>
  </thead>

   <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.brand_name %></td>
        <td><%= brand.origin_country %></td>
        <td><%= link_to 'Show', brand_path(brand)%></td>
        <td><%= link_to 'Edit', edit_brand_path(brand)%></td>
        <td><a style="margin-left: 20px;" href="/brands/<%= brand.id %>/devices">Devices</a></td>
      </tr>
    <% end %>
  </tbody>
</table> 

<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap -m-4">
    <% @brands.each do |brand| %>
      <div class="p-4 lg:w-1/3">
        <div class="h-full bg-gray-100 bg-opacity-75 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
          <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">Brand Name</h2>
          <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3"><%= brand.brand_name %></h1>
           <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">Origin Country</h2>
          <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3"><%= brand.origin_country %></h1>
          <%= link_to 'Show', brand_path(brand), class: "text-indigo-500 inline-flex items-center pr-2"%>
          <%= link_to 'Edit', edit_brand_path(brand), class: "text-indigo-500 inline-flex items-center pr-2"%>
          <a class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0" href="/brands/<%= brand.id %>/devices">Devices</a>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</section>